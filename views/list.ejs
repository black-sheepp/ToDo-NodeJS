    <div class="container-fluid">
        <a class="navbar-brand" href="#">
            <h1>ToDo List</h1>
        </a>
    </div>

    <div class="input-section">
        <form action="/" method="POST">
            <!-- Add ToDo: -->
            <label for="Add-To-Do" id="label">Add ToDo:</label>
            <input type="text" id="Add-To-Do" placeholder="Add Task" name="WorkToDo">
            <!-- Deadline: -->
            <label for="Add-Dealine">Deadline:</label>
            <input type="date" id="Add-Dealine" placeholder="MM/DD/YYYY" name="Deadline">
            <!-- ToDo-Category: -->
            <label for="ToDo-Category">ToDo-Category:</label>
            <select name="ToDoCategory" id="ToDo-Category">
                <option value="Work">Work</option>
                <option value="Fitness">Fitness</option>
                <option value="Shoping">Shopping</option>
                <option value="Travel">Travel</option>
                <option value="Personal">Personal</option>
                <option value="Entertainment">Entertainment</option>
            </select>
            <!-- ADD ToDo Button-->
            <input type="submit" value="ADD ToDo" class="submit">
        </form>
    </div>

                    <%= i.WorkToDo %>
                    <div class="list-action">
                        <p class="tag"> <%= i.ToDoCategory %> </p>
                        <p class="tag-dealine"> <%= i.Deadline %> </p>
                        <a href="/delete/?WorkToDo=<%= i.WorkToDo %>" class="delete"><i class="fa-sharp fa-solid fa-trash"></i></a>
